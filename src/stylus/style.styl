.main-content {
  display: flex
  justify-content: center
}

.board {
  display: flex
}

.preloader {
  display: block
  background: white
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 9999
}

.first-start {
  display: block
  background: rgba(255, 255, 255, .91)
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 8888

  &__nav {
    position: absolute
    top: 50%
    left: 50%
    transform translate(-50%, -50%)
  }

  &__step-1 {
    display: none
  }

  &__step-2 {
    display: none
  }
}

.logo {
  position: absolute
  top: 50%
  left: 50%
  transform translate(-50%, -50%)
  width: 60vw
}

.button {
  padding: 10px 20px
  color: white
  background: rgb(0, 178, 8); /* Old browsers */
  background: -moz-linear-gradient(top, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  text-decoration: none
  font: 700 4vh 'Rounded', sans-serif
  border-radius 19px
  box-shadow black 2px 1px 10px
  margin: 10px

  &:hover {
    background: rgb(0, 178, 8); /* Old browsers */
    background: -moz-linear-gradient(top, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  }
}

.first-start__title {
  font: 5.5vh 'Rounded', sans-serif
  text-align: center
  text-shadow black 1px 1px 3px
}

.player-list {
  list-style none
  display: flex
  padding: 0
  justify-content: center
}

.player-item {
  font: 700 4vh 'Rounded', sans-serif
  display: flex
  justify-content: center
  align-items center
  color: white
  width 70px
  height: 70px
  background: rgb(0, 178, 8); /* Old browsers */
  background: -moz-linear-gradient(top, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  border-radius 50%
  margin: 10px
  box-shadow black 2px 1px 10px
  cursor pointer

  &:hover {
    background: rgb(0, 178, 8); /* Old browsers */
    background: -moz-linear-gradient(top, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  }
}

.board-left {
  position: relative
}

.circle {
  width: 20vh
  height: 20vh
  border-radius 50%
  display: flex
  z-index: 222
  align-items center
  flex-wrap wrap
  justify-content center
  align-content center
  background: white
  position absolute
  top: 50%
  text-align: center
  right: 0
  font: 700 3.5vh 'Rounded', sans-serif
  color #E4181F
  transform: translate(50%, -50%)

  .circle__top {
    border-bottom 2px solid #E4181F
  }
}

.row {
  display: flex
}

.column {
  display: flex
  flex-wrap: wrap

  &_right {
    justify-content: flex-end
  }
}

.categories {
  width: 300%
  max-height: 75%
  display: flex
  justify-content center
  align-items center
  flex-direction column
  box-sizing border-box
}

.category {
  position: relative
  display: block
  width: 98%
  min-height: 48%
  border-radius 9px
  box-sizing border-box
  margin: .5vh 0
  background-size cover
  background-repeat no-repeat;

  &__title {
    position: absolute
    font: 700 3.6vh 'Rounded', sans-serif
    color: #8E472F
    width: 100%
    text-align: center
    margin-top 15px
    text-shadow white 3px 1px 0
  }

  &__area {
    position: absolute
    top: 56%;
    left: 50%;
    transform: translate(-50%, -50%)
    width: 62%
    min-height: 62%
    border-radius 10px
    background: rgba(255, 255, 255, .6)
  }

  &__counter {
    position: absolute
    font: 700 5vh 'Rounded', sans-serif
    color: #8E472F
    text-shadow white 3px 1px 5px
    bottom: 0

    &_left {
      left: 12px
    }

    &_right {
      right: 12px
    }
  }
}

.card {
  background-size: contain
  background-position center
  background-repeat no-repeat
  width: 60%
  height: 58%
  transform rotate(4deg)
  position: absolute
  display: block
  top: 27%
  left: 20%
  box-shadow black 2px 2px 10px
  z-index 7777
  transition 2.5s

  &.active {
    transform: translate(-50%, -50%) rotate(0deg)
    z-index 9999
    width: 170%;
    height: 165%;
  }

  &_orange {
    background-image: url('../img/card-orange.png')

    &.active {
      top: 100%
      left: 100%
    }
  }

  &_green {
    background-image: url('../img/card-green.png')

    &.active {
      top: 100%
      left: 0
    }
  }

  &_blue {
    background-image: url('../img/card-blue.png')

    &.active {
      top: 0
      left: 100%
    }
  }

  &_yellow {
    background-image: url('../img/card-yellow.png')

    &.active {
      top: 0
      left: 0
    }
  }
}

.item {
  height: 13vh
  min-width: 13vh
  border-radius 7px
  margin .5vh
  box-sizing border-box
  background-size contain
  background-repeat no-repeat;
}

.orange {
  background-image: url(../img/orange.png)
}

.grey {
  background: #ebecec
}

.green {
  background-image: url(../img/green.png)
}

.yellow {
  background-image: url(../img/yellow.png)
}

.blue {
  background-image: url(../img/blue.png)
}

.start {
  background-image: url(../img/start.png)
}

.dice {
  width: 6vh
  height: 6vh
  display: block
  background-size: contain
  background-repeat: no-repeat;
  background-image: url('../img/dice.png')
}

.history {
  position: absolute
  bottom: 6vh
  right: 0

  &__button {
    display: flex
    justify-content center
    align-items center
    cursor pointer
  }

  &__button.inactive {
    background: grey
    cursor not-allowed
  }

  &__button.inactive .dice {
    cursor not-allowed
  }

  &__title {
    font: 700 6vh 'Rounded', sans-serif
    margin-right 1vh
  }
}

.player {
  position: absolute
  width: 3vh
  height: 5.5vh
  box-sizing border-box
  background-size contain
  background-repeat no-repeat;
  transition 1s

  &_1 {
    background-image: url(../img/player-1.png)
    bottom: 6vh
    left: 2vh
  }

  &_2 {
    background-image: url(../img/player-2.png)
    bottom: 6vh
    left: 4vh
  }

  &_3 {
    background-image: url(../img/player-3.png)
    bottom: 6vh
    left: 6vh
  }

  &_4 {
    background-image: url(../img/player-4.png)
    bottom: 6vh
    left: 8vh
  }

  &_5 {
    background-image: url(../img/player-5.png)
    bottom: 2vh
    left: 2vh
  }

  &_6 {
    background-image: url(../img/player-6.png)
    bottom: 2vh
    left: 4vh
  }

  &_7 {
    background-image: url(../img/player-7.png)
    bottom: 2vh
    left: 6vh
  }

  &_8 {
    background-image: url(../img/player-8.png)
    bottom: 2vh
    left: 8vh
  }
}

.statistic {
  padding 10px
  font: 700 2.5vh 'Rounded', sans-serif
  text-align: center

  &__title {
    font: 700 3.5vh 'Rounded', sans-serif
  }

  &__list {
    list-style none
    padding: 0 3.5vh
  }

  &__player {
    display: flex
    justify-content space-between
    align-items center

    &_1 .statistic__icon {
      background-image: url(../img/player-1.png)
    }

    &_2 .statistic__icon {
      background-image: url(../img/player-2.png)
    }

    &_3 .statistic__icon {
      background-image: url(../img/player-3.png)
    }

    &_4 .statistic__icon {
      background-image: url(../img/player-4.png)
    }

    &_5 .statistic__icon {
      background-image: url(../img/player-5.png)
    }

    &_6 .statistic__icon {
      background-image: url(../img/player-6.png)
    }

    &_7 .statistic__icon {
      background-image: url(../img/player-7.png)
    }

    &_8 .statistic__icon {
      background-image: url(../img/player-8.png)
    }
  }

  &__icon {
    width: 2.2vh
    height: 4.7vh
    background-size contain
    background-repeat no-repeat;
  }
}