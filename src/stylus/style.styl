.main-content {
  display: flex
  justify-content: center
}

.board {
  display: flex
}

.preloader {
  display: block
  background: white
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 9999
}

.first-start {
  display: block
  background: rgba(255, 255, 255, .91)
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 8888

  &__nav {
    position: absolute
    top: 50%
    left: 50%
    transform translate(-50%, -50%)
  }
}

.logo {
  position: absolute
  top: 50%
  left: 50%
  transform translate(-50%, -50%)
  width: 60vw
}

.button {
  padding: 10px 20px
  color: white
  background: rgb(0, 178, 8); /* Old browsers */
  background: -moz-linear-gradient(top, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  text-decoration: none
  font: 700 4vh 'Rounded', sans-serif
  border-radius 19px
  box-shadow black 2px 1px 10px
  margin: 10px

  &:hover {
    background: rgb(0, 178, 8); /* Old browsers */
    background: -moz-linear-gradient(top, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  }
}

.first-start__title {
  font: 5.5vh 'Rounded', sans-serif
  text-align: center
  text-shadow black 1px 1px 3px
}

.player-list {
  list-style none
  display: flex
  padding: 0
  justify-content: center
}

.player-item {
  font: 700 4vh 'Rounded', sans-serif
  display: flex
  justify-content: center
  align-items center
  color: white
  width 70px
  height: 70px
  background: rgb(0, 178, 8); /* Old browsers */
  background: -moz-linear-gradient(top, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(0, 178, 8, 1) 0%, rgba(121, 221, 39, 1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  border-radius 50%
  margin: 10px
  box-shadow black 2px 1px 10px
  cursor pointer

  &:hover {
    background: rgb(0, 178, 8); /* Old browsers */
    background: -moz-linear-gradient(top, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom, rgba(121, 221, 39, 1) 0%, rgba(0, 178, 8, 1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  }
}

.board-left {
  position: relative
}

.circle {
  width: 20vh
  height: 20vh
  border-radius 50%
  display: flex
  z-index: 222
  align-items center
  flex-wrap wrap
  justify-content center
  align-content center
  background: white
  position absolute
  top: 50%
  text-align: center
  right: 0
  font: 700 3.5vh 'Rounded', sans-serif
  color #E4181F
  transform: translate(50%, -50%)

  .circle__top {
    border-bottom 2px solid #E4181F
  }
}

.row {
  display: flex
}

.column {
  display: flex
  flex-wrap: wrap

  &_right {
    justify-content: flex-end
  }
}

.categories {
  width: 300%
  max-height: 75%
  display: flex
  justify-content center
  align-items center
  flex-direction column
  box-sizing border-box
}

.category {
  position: relative
  display: block
  width: 98%
  min-height: 48%
  border-radius 9px
  box-sizing border-box
  margin: .5vh 0
  background-size cover
  background-repeat no-repeat;

  &__title {
    position: absolute
    font: 700 3.6vh 'Rounded', sans-serif
    color: #8E472F
    width: 100%
    text-align: center
    margin-top 15px
    text-shadow white 3px 1px 0
  }

  &__area {
    position: absolute
    top: 56%;
    left: 50%;
    transform: translate(-50%, -50%)
    width: 62%
    min-height: 62%
    border-radius 10px
    background: rgba(255, 255, 255, .6)
  }

  &__counter {
    position: absolute
    font: 700 5vh 'Rounded', sans-serif
    color: #8E472F
    text-shadow white 3px 1px 5px
    bottom: 0

    &_left {
      left: 12px
    }

    &_right {
      right: 12px
    }
  }
}

.item {
  height: 13vh
  min-width: 13vh
  border-radius 7px
  margin .5vh
  box-sizing border-box
  background-size cover
  background-repeat no-repeat;

  &:hover {
    border 1px solid
  }
}

.orange {
  background-image: url(../img/orange.png)
}

.grey {
  background: #ebecec
}

.green {
  background-image: url(../img/green.png)
}

.yellow {
  background-image: url(../img/yellow.png)
}

.blue {
  background-image: url(../img/blue.png)
}

.start {
  background-image: url(../img/start.png)
}