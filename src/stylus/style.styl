.main-content {
  display: flex
  justify-content: center
}

.board {
  display: flex
}

.board-left {
  position: relative
}

.circle {
  width: 20vh
  height: 20vh
  border-radius 50%
  display: block
  background: white
  position absolute
  top: 50%
  right: 0
  transform: translate(50%, -50%)
}

.row {
  display: flex
}

.column {
  display: flex
  flex-wrap: wrap

  &_right {
    justify-content: flex-end
  }
}

.categories {
  width: 300%
  max-height: 75%
  display: flex
  justify-content center
  align-items center
  flex-direction column
  box-sizing border-box
}

.category {
  display: block
  width: 98%
  min-height: 48%
  border-radius 9px
  box-sizing border-box
  margin: .5vh 0
  background-size cover
  background-repeat no-repeat;
}

.item {
  height: 13vh
  min-width: 13vh
  border-radius 7px
  margin .5vh
  box-sizing border-box
  background-size cover
  background-repeat no-repeat;

  &:hover {
    border 1px solid grey
  }
}

.orange {
  background-image: url(../img/orange.png)
}

.grey {
  background: #ebecec
}

.green {
  background-image: url(../img/green.png)
}

.yellow {
  background-image:  url(../img/yellow.png)
}

.blue {
  background-image: url(../img/blue.png)
}

.start {
  background-image: url(../img/start.png)
}